@using Carpare.Models.Entity
@model User[]
@{
    ViewBag.Title = "List Users";
}
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<div id="main">
    <span style="font-size:30px;cursor:pointer;float:right" onclick="openNav()">&#9776; MENU</span>

    <h2>List Users</h2>
    <table>
        <tr>
            <th>UserId</th>
            <th>Name</th>
            <th>E-Mail Address</th>
            <th>Status</th>
            <th>Gender</th>
            <th>Birth Date</th>
            <th>Location</th>
        </tr>
        @foreach (User user in Model)
        {
            <tr>
                <td>@user.UserId.Replace("&apos;", "'")</td>
                <td>@user.Name.Replace("&apos;", "'")</td>
                <td>@user.email.Replace("&apos;", "'")</td>
                <td>@user.status</td>
                <td>@user.gender</td>
                <td>@user.BirthDate</td>
                <td>@user.Location.Replace("&apos;", "'")</td>
            </tr>
        }
    </table>
</div>