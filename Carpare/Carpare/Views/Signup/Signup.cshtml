@using Carpare.Models.Entity
@model Credential
@{
    ViewBag.Title = "Signup";
}

<h2>Sign Up</h2>
<div id="main">
    <span style="font-size:30px;cursor:pointer;float:right" onclick="openNav()">&#9776; MENU</span>
    <form action="~/Signup/Signup" method="post">
        User ID:<br /><input type="text" name="UserId" value="@Model.UserId"><br />
        Password:<br /><input type="password" name="Password" value="@Model.Password"><br />
        E-mail:<br /><input type="text" name="Email" value="@Model.Email"><br />
        Name and Surname: <br /><input type="text" name="Name" value="@Model.Name"><br />
        <input type="submit" value="Signup">
    </form>
</div>
<p>@ViewBag.message</p>