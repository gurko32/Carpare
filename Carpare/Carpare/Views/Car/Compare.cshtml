@using Carpare.Models.Entity
@model Car[]
@{
    ViewBag.Title = "Compare";
}

<h2>Compare</h2>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<div id="main">
    <span style="font-size:30px;cursor:pointer;float:right" onclick="openNav()">&#9776; MENU</span>
    <br />
    <br />
    <br />
    <!-- https://scontent.fada1-3.fna.fbcdn.net/v/t1.0-9/25594261_10215792258347585_6764823223982335517_n.jpg?oh=9743a8ed3a52118998fa402d355e40c3&oe=5ACF33B5  -->
    <p> <img align="right" src="@Model[1].Url" alt="Car 1's Photo" width="300" height="300" /> <img align="right" src="https://cdn.pbrd.co/images/GZHBEAfm.jpg" alt="empty" />      <img align="right" src="@Model[0].Url" alt="Car 2's Photo" width="300" height="300" /></p>
    <table>
        <tr>
            <th>Feaures</th>
            <th>Car 1</th>
            <th>Car 2</th>

        </tr>
        <tr>
            <td>Brand And Model</td>
            <td>@Model[0].Brand @Model[0].Model</td>
            <td>@Model[1].Brand @Model[1].Model</td>
        </tr>
        <tr>
            <td>Year Of Production</td>
            <td>@Model[0].YearOfProduction</td>
            <td>@Model[1].YearOfProduction</td>
        </tr>
        <tr>
            <td>Transmission Type</td>
            <td>@Model[0].TransmissionType</td>
            <td>@Model[1].TransmissionType</td>
        </tr>
        <tr>
            <td>Fuel Type</td>
            <td>@Model[0].Fuel</td>
            <td>@Model[1].Fuel</td>
        </tr>
        <tr>
            <td>Top Speed</td>
            <td>@Model[0].TopSpeed km/h</td>
            <td>@Model[1].TopSpeed km/h</td>
        </tr>
        <tr>
            <td>Acceleration (0 - 100 km/h)</td>
            <td>@Model[0].Acceleration s</td>
            <td>@Model[1].Acceleration s</td>
        </tr>
        <tr>
            <td>Urban Consumption</td>
            <td>@Model[0].UrbanConsumption l/100km</td>
            <td>@Model[1].UrbanConsumption l/100km</td>
        </tr>
        <tr>
            <td>Wheel Drive</td>
            <td>@Model[0].WheelDrive</td>
            <td>@Model[1].WheelDrive</td>
        </tr>
    </table>



</div>